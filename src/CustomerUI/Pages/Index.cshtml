@page
@model IndexModel
@{
    ViewData["Title"] = "درخواست ها";
}


<table class="table table-info table-striped table-hover w-100">
    <tr>
        <td>شناسه درخواست</td>
        <td>عنوان</td>
        <td>توضیحات</td>
        <td>عملیات</td>
    </tr>
    @foreach (var ticket in Model.Tickets)
    {
        <tr>
            <td>@ticket.Id</td>
            <td>@ticket.Title</td>
            <td>@ticket.Description</td>
            <td>
                <a class="btn btn-sm btn-info" asp-page="/TicketDetails" asp-route-Id="@ticket.Id">مشاهده</a>
                <a class="btn btn-sm btn-warning" asp-page="" asp-route-Id="@ticket.Id">ویرایش</a>
                <a class="btn btn-sm btn-danger" asp-page="" asp-route-Id="@ticket.Id">بستن</a>
            </td>
        </tr>
    }
</table>